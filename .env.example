# Test environment
TEST_ENV=dev  # Options: dev, staging, prod

# Browser settings
DEFAULT_BROWSER=chromium  # Options: chromium, firefox, webkit
HEADLESS=true
SLOW_MO=0
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Timeouts (milliseconds)
